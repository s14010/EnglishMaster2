<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s14003.englishmaster.Main">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imagebuton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/sentaku"
        android:layout_marginTop="98dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imagebuton2"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:src="@drawable/rank"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/imagebuton"
        android:layout_alignLeft="@+id/imagebuton"
        android:layout_alignStart="@+id/imagebuton" />



    <ImageButton
        android:id="@+id/imagebuton3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:src="@drawable/syougou"
        android:layout_marginBottom="152dp"
        android:layout_alignBottom="@+id/menu"
        android:layout_alignLeft="@+id/imagebuton2"
        android:layout_alignStart="@+id/imagebuton2" />

</RelativeLayout>